// All the options description can be found here: https://www.typescriptlang.org/docs/handbook/compiler-options.html

{
  "compilerOptions": {
    // --strict
    "strictNullChecks": false,
    "noImplicitAny": false,

    "allowJs": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build/src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@config/*": ["./src/config/*"]
    }
  }
}